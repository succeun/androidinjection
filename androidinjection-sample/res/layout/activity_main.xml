<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scrollbarStyle="insideOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnRun1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="간단한 텍스트 출력하기" />

            <Button
                android:id="@+id/btnRun2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시스템서비스 이용하기" />

            <Button
                android:id="@+id/btnRun3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NoTitle과 FullScreen 하기" />

            <Button
                android:id="@+id/btnRun4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하단 메뉴 이용 하기" />

            <Button
                android:id="@+id/btnRun5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="쓰레드 이용 하기" />

            <Button
                android:id="@+id/btnRun6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="액티비티 통신 하기" />

            <Button
                android:id="@+id/btnRun7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ListView 이용 하기" />

            <Button
                android:id="@+id/btnRun9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="네이버 최신 뉴스(Open Api)" />

            <Button
                android:id="@+id/btnRun10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카메라 이용하기" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>